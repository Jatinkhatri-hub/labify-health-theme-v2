{{ 'header.css' |  asset_url |  stylesheet_tag }}

<style>
  @font-face {
    font-family: 'Avenir Regular';
    src: url('{{'avenir-regular.woff2' |  asset_url }}');
  }
</style>

<header class="nav-bar__container color-{{ section.settings.color_scheme }} {{ section.settings.header_position }}">
  <div class="nav-bar__items">
    <div class="nav-drawer__open-btn">{% render 'icon-hamburger-2' %}</div>
    <a href="/">
    {{ section.settings.banner_image | image_url: width: section.settings.image.width | image_tag: sizes: sizes, widths: '200,300,400,500,600,700,800,900,1000,1200,1400,1600,1800,2000,2200,2400,2600,2800,3000,3200', class: "nav-bar__brand-logo" }}
    </a>
    <a href="{{ routes.cart_url }}"
      class="nav-bar__cart-open-btn">
      {%  render 'icon-shoping-bag' %} 
    </a>
  </div>
</header>


{%  schema  %} 
  {
    "name": "header",
    "class": "section-header",
    "settings": [
      {
        "type": "image_picker",
        "id": "brand_logo",
        "label": "Header Logo"
      },
      {
        "type": "link_list",
        "id": "navigation",
        "label": "Navigation Menu",
        "default": "main-menu"
      },
      {
        "type": "color_scheme",
        "id": "color_scheme",
        "label": "t:section.all.colors.label",
        "default": "scheme-1"
      },
      {
        "type": "header",
        "content": "Sticky Header"
      },
      {
        "type": "select",
        "id": "header_position",
        "label": "Header Position",
        "options":  [
          {
            "value": "always",
            "label": "Show Always"
          },
          {
            "value": "scroll_up",
            "label": "Show on Scroll Up"
          },
          {
            "value": "none",
            "label": "None"
          }
        ],
        "default": "always"
      }
    ]
  }
{% endschema %}