{{ 'header.css' |  asset_url |  stylesheet_tag }}


{%  schema  %} 
  {
    "name": "header",
    "class": "section-header",
    "settings": [
      {
        "type": "image_picker",
        "id": "brand_logo",
        "label": "Header Logo"
      },
      {
        "type": "link_list",
        "id": "navigation",
        "label": "Navigation Menu",
        "default": "main-menu"
      },
      {
        "type": "color_scheme",
        "id": "color_scheme",
        "label": "t:section.all.colors.label",
        "default": "scheme-1"
      },
      {
        "type": "header",
        "content": "Sticky Header"
      },
      {
        "type": "select",
        "id": "header_position",
        "label": "Header Position",
        "options":  [
          {
            "value": "always",
            "label": "Show Always"
          },
          {
            "value": "scroll_up",
            "label": "Show on Scroll Up"
          },
          {
            "value": "none",
            "label": "None"
          }
        ],
        "default": "always"
      }
    ]
  }
{% endschema %}